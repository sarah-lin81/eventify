<div class="d-flex pt-3 pb-3">
  <h1 class="mr-3 h-200"><%= @event.title %></h1>
  <% if user_signed_in?  %>
    <% if @event.user_id == current_user.id %>
      <div class="buttons p-2">
        <%= link_to "Edit", edit_event_path(@event), class: "btn btn-primary" %>
        <%= link_to "Delete", event_path(@event), method: "delete",
                                                  data: { confirm: "Are you sure?" },
                                                  class: "btn btn-danger" %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="d-flex justify-content-between">
  <div class="">
    <p>Description: <%= simple_format(@event.description) %></p>
  </div>
  
  <div class="">
    <p>Location: <%= @event.location %></p>
    <p>Event starts: <%= @event.start_date %></p>
    <p>Event ends: <%= @event.end_date %></p>
  </div>
</div>