<div class="col-md-3 mb-2">
  <% if event.img.attached? %>
    <%= image_tag event.img.url, size: "250x200" %>
  <% end %>
</div>
<div class="col-md-9 mb-2">
  <div class="card-body">
    <h2><%= link_to event.title, event_path(event), class: "text-decoration-none" %></h2>
    <p><%= event.start_date.strftime("%Y-%m-%d %H:%M:%S") %></p>
    <p><%= event.description %></p>
  </div>
</div>