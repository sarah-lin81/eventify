<div class="main">
  <div class="banner">
    <h1 class="my-3 banner-text">Explore Events</h1>
  </div>
</div>

<div class="dropdown text-right px-4">
  <a class="btn btn-outline-secondary dropdown-toggle px-3 sort" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-expanded="false">
    Sort by
  </a>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
    <span class="dropdown-item-text">Start date</span>
    <%= link_to "Closest -> Furthest", events_path(desc: "asc"), class: "dropdown-item" %>
    <%= link_to "Furthest -> Closest", events_path(desc: "desc"), class: "dropdown-item" %>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-4 p-4">
  <%= render @events %>
</div>