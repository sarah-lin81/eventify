<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    <div class="alert alert-danger"><%= message %></div> 
  <% end %>  
<% end %> 

<%= form_with(model: @event) do |f| %>
  <div class="form-group row mb-3">
    <%= f.label :event_photo, class: "col-sm-2 col-form-label" %> 
    <div class="col-sm-7"><%= f.file_field :img %></div> 
  </div> 
  <div class="form-group row mb-3">
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7"><%= f.text_field :title, class: "form-control" %></div>
  </div>

  <div class="form-group row mb-3">
    <%= f.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7"><%= f.text_area :description, class: "form-control" %></div>
  </div>

  <div class="form-group row mb-3">
    <%= f.label :location, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7"><%= f.text_field :location, class: "form-control" %></div>
  </div>

  <div class="form-group row mb-3">
    <%= f.label :event_starts, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7"><%= f.datetime_field :start_date, class: "form-control" %></div>  
  </div>
  
  <div class="form-group row mb-3">
    <%= f.label :event_ends, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7"><%= f.datetime_field :end_date, class: "form-control" %></div>  
  </div>
  
  <%= f.submit class: "btn btn-primary mt-3" %> 
<% end %>  