<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Events", root_path, class: "navbar-brand mb-0 h1 ml-3" %>
  <%= form_tag events_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
    <%= text_field_tag :search, nil, placeholder: "Search", class: "form-control mr-sm-2" %>
    <%= submit_tag "Search", :event_name => nil, class: "btn btn-outline-success my-2 my-sm-0" %> 
  <% end %>  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse justify-content-end mr-3" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <% if user_signed_in? %>  
        <li class="nav-item mr-3">
          <%= link_to "Create event", new_event_path, class: "nav-link" %>
        </li> 
        <li class="nav-item mr-3">
          <%= link_to "Enrollments",  users_enrollments_path, class: "nav-link" %>
        </li> 
          <li class="nav-item d-flex">
            <div class="nav-link pr-0">
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar.url, size: "20x20", class: "rounded-circle" %>
              <% else %> 
                <%= image_tag("default", :size => "20x20") %>
              <% end %>
            </div>
            <div class="dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                <%= current_user.email %>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                  <i class="fas fa-cog"> Setting</i>
                <% end %> 
                <%= link_to destroy_user_session_path, method: "delete", class: "dropdown-item" do %>
                  <i class="fas fa-sign-out-alt"> Sign Out</i>
                <% end %> 
              </div>
            </div>
          </li>
      <% else %> 
        <li class="nav-item">
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
        </li>        
      <% end %> 
    </ul>
  </div>
</nav>